from django.db import models

class Candidato(models.Model):
    CARGOS = [
        ('ESTADUAL', 'Deputado Estadual'),
        ('FEDERAL', 'Deputado Federal'),
        ('SENADOR', 'Senador'),
        ('GOVERNADOR', 'Governador'),
        ('PRESIDENTE', 'Presidente'),
    ]
    nome_urna = models.CharField(max_length=100)
    cargo = models.CharField(max_length=20, choices=CARGOS)
    
    # Auto-relacionamento para Dobradinhas (Um candidato indica outro)
    dobradinhas_sugeridas = models.ManyToManyField('self', symmetrical=False, blank=True)

    def __str__(self):
        return f"{self.nome_urna} ({self.cargo})"

class Lideranca(models.Model):
    nome = models.CharField(max_length=100)
    municipio_base = models.CharField(max_length=100)
    ativo = models.BooleanField(default=False)
    # Lista de candidatos que esta liderança decidiu apoiar
    candidatos_apoiados = models.ManyToManyField(Candidato, related_name='liderancas_vinculadas')

    def __str__(self):
        return self.nome

class SugestaoApoio(models.Model):
    # O Candidato "A" sugere que sua Liderança apoie o Candidato "B"
    candidato_origem = models.ForeignKey(Candidato, on_delete=models.CASCADE, related_name='sugestoes_enviadas')
    lideranca_alvo = models.ForeignKey(Lideranca, on_delete=models.CASCADE)
    candidato_sugerido = models.ForeignKey(Candidato, on_delete=models.CASCADE, related_name='sugestoes_recebidas')
    status = models.CharField(max_length=20, default='PENDENTE') # PENDENTE, ACEITO, RECUSADO







